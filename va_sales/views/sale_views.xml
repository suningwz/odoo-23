<odoo>
  <data>
    
    <record model="ir.ui.view" id="view_order_form">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='name']" position="attributes">
                <attribute name="readonly">False</attribute>
            </xpath> 

            <xpath position="after" expr="//field[@name='payment_term_id']">
              <xpath position="move" expr="//form[1]/sheet[1]/notebook[1]/page[@name='other_information']/group[1]/group[@name='sales_person']/field[@name='client_order_ref']"/>
              <field name='your_contact_id' domain="[('parent_id', '=', partner_id)]" options="{'no_create':true,'no_open':true}"/>
            </xpath>
            
            <xpath position="before" expr="//field[@name='validity_date']">
              <field name='id' invisible="1"/>
              <xpath position="move" expr="//form[1]/sheet[1]/notebook[1]/page[@name='other_information']/group[1]/group[@name='sales_person']/field[@name='company_id']"/>
              <field name='business_unit_id' domain="[('id', 'in', company_id.business_unit_ids)]" options="{'no_create':true,'no_open':true}" string="Succursale"/>
              <xpath position="move" expr="//form[1]/sheet[1]/notebook[1]/page[@name='other_information']/group[1]/group[@name='sales_person']/field[@name='user_id']"/>
            </xpath>

            <xpath position="attributes" expr="//form[1]/sheet[1]/group[@name='sale_header']/group[@name='order_details']/field[@name='company_id']">
              <attribute name="attrs">{}</attribute>
              <attribute name="force_save">True</attribute>
              <attribute name="options">{"no_create":true,"no_open":true}</attribute>
              <attribute name="string">VA-GROUP</attribute>
            </xpath>

            <xpath position="attributes" expr="//form[1]/sheet[1]/group[@name='sale_header']/group[@name='order_details']/field[@name='user_id']">
              <attribute name="attrs">{}</attribute>
              <attribute name="force_save">True</attribute>
              <attribute name="options">{"no_create":true,"no_open":true}</attribute>
              <attribute name="string">Notre Contact</attribute>
            </xpath>
            
        </field>
    </record>

    <record model="ir.ui.view" id="view_company_form_va">
        <field name="name">	res.company.form.va</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form"/>
        <field name="arch" type="xml">
            
            <xpath expr="//field[@name='website']" position="after">
                <field name='business_unit_ids' widget="many2many_tags"/>
            </xpath> 
            
        </field>
    </record>

  </data>
</odoo>