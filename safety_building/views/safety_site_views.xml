<odoo>
  <data>

    <record model="ir.actions.act_window" id="action_safety_site">
      <field name="name">security_audit window</field>
      <field name="res_model">security_audit.security_audit</field>
      <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="menu_safety_root"
            name="Safety"
            web_icon="fa fa-exclamation-triangle,#154734,#D9D9D6"
            active="True"
            groups="group_safety_user"
    />

    <menuitem
            id="menu_safety_site"
            name="Sites"
            parent="menu_safety_root"
            sequence="1"
            action="action_safety_site"
    />

    <record model="ir.ui.view" id="safety_site_list">
      <field name="name">safety_site_list</field>
      <field name="model">safety.site</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="partner_id" options="{'no_open':True,'no_create':True}"/>
          <field name="external_resp_id" options="{'no_open':True,'no_create':True}"/>
          <field name="internal_resp_id" options="{'no_open':True,'no_create':True}"/>
        </tree>
      </field>
    </record>

    <record model="ir.ui.view" id="safety_site_form">
            <field name="name">safety_site_form</field>
            <field name="model">safety.site</field>
            <field name="arch" type="xml">
              <form string="Safety Sites">
                <header>
                    
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group name="site_header">
                        <field name="description"/>
                        <group name="partner_details">
                            <field name="partner_id" options="{'no_open':True,'no_create':True}"/>
                            <field name="external_resp_id" options="{'no_open':True,'no_create':True}"/>
                        </group>
                        <group name="company_details">
                            <field name="internal_resp_id" options="{'no_open':True,'no_create':True}"/>
                        </group>
                        
                    <notebook>
                        <page string="Site Areas" name="site_area">
                            <group string="Site Areas">
                                <field name="site_area_ids" string="" readonly='1'>
                                    <tree>
                                        <field name="name"/>
                                        <field name="description"/>
                                        <field name="external_resp_id"/>
                                        <field name="internal_resp_id"/>
                                    </tree>
                                </field>
                            </group>
                        </page>
                        
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
              </form>
            </field>
        </record>


